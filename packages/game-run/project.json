{
  "name": "game-run",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/game-run/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/game-run",
        "main": "packages/game-run/src/index.ts",
        "tsConfig": "packages/game-run/tsconfig.lib.json",
        "assets": ["packages/game-run/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs game-run {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/game-run/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/game-run"],
      "options": {
        "jestConfig": "packages/game-run/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
