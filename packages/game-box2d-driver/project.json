{
  "name": "game-box2d-driver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/game-box2d-driver/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/game-box2d-driver",
        "main": "packages/game-box2d-driver/src/index.ts",
        "tsConfig": "packages/game-box2d-driver/tsconfig.lib.json",
        "assets": [
          "packages/game-box2d-driver/*.md"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs game-box2d-driver {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/game-box2d-driver/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/game-box2d-driver"
      ],
      "options": {
        "jestConfig": "packages/game-box2d-driver/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
